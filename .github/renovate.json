{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "reviewers": [
    "cshezi"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": [
        "actions/"
      ],
      "groupName": "github-actions"
    },
    {
      "matchPackagePatterns": [
        "fastify"
      ],
      "groupName": "fastify"
    },
    {
      "automerge": true,
      "matchCurrentVersion": ">= 1.0.0",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "automergeType": "pr",
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  }
}
