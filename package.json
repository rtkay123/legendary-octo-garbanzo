{
  "name": "tms-service",
  "version": "1.2.0",
  "description": "transaction monitoring service",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json && npm run copy-files",
    "copy-files": "copyfiles ./swagger.yaml build/",
    "start": "node -r dotenv/config build/index.js",
    "cleanup": "rm -rf dist template jest.config.js jest.config.js.map node_modules",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "prepare": "husky install",
    "test": "jest --config=jest.config.ts --passWithNoTests --forceExit",
    "test:watch": "jest --config=jest.config.ts --watch"
  },
  "keywords": [
    "mojaloop",
    "actio",
    "frm"
  ],
  "contributors": [
    {
      "name": "Len Bekker"
    },
    {
      "name": "Jean-Pierre Nell"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/response-validation": "^2.5.0",
    "@fastify/swagger": "^8.8.0",
    "@frmscoe/frms-coe-lib": "^2.2.2",
    "@frmscoe/frms-coe-startup-lib": "^2.0.1",
    "@log4js-node/logstash-http": "^1.1.0",
    "arangojs": "^8.4.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "elastic-apm-node": "^4.0.0",
    "fastify": "^4.21.0",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2",
    "swagger2": "^4.0.3",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "8.0.3",
    "ioredis-mock": "^8.7.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
